<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
<div class="who-am-i">
  <div class="row">
    <div class="twelve columns hero-wrap">
      <div class="flex-video widescreen">
        <div style="position:relative;" id='flex-wrapper'>
          <h1 class="hero">Peter Klipfel</h1>
          <h2 class="hero">computers and music</h2>
        </div>
        <%= render 'layouts/computer' %>
      </div>
    </div>
  </div>
</div>

<div class="computer-me">
  <div class="row">
    <h1>Things I Build</h1>
  </div>
  <div class="row">
    <div class="four columns">
      <p>websites</p>
      <%= image_tag "html.png"%>
    </div>
     <div class="four columns">
      <p>servers</p>
      <%= image_tag "server.png"%>
    </div>
     <div class="four columns">
      <p>data apps</p>
      <%= image_tag "database.png"%>
    </div>
  </div>
  <!-- I know, I know, I shouldn't have inline styles. If it bothers you, submit a pull request -->
  <div class="row" style="margin-top: 80px">
    <div class="twelve columns">
      <p style="font-size: 30px">I have built clouds, streaming data applications, web apps, mobile apps, machine learning pipelines, and everything in between.</p>
    </div>
  </div>
</div>

<div class="languages-me">
  <div class="row">
    <h1>Languages I Speak</h1>
  </div>
  <div class="row">
    <% %w(ruby python node scala).each do |lang| %>
      <div class="three columns">
        <%= image_tag "#{lang}.png"%>
      </div>
    <% end %>
  </div>
  <div class="row">
    <% %w(html5 css3 js).each do |lang| %>
      <div class="four columns">
        <%= image_tag "#{lang}.png", :class => 'triad-images' %>
      </div>
    <% end %>
  </div>
</div>

<div class="tools-me">
  <div id="layer1">
    <div class="row">
      <h1>Tools I Use</h1>
    </div>
    <div class="row">
      <% %w(ansible juju ubuntu mysql postgres redis).each do |tool| %>
        <div class="two columns">
          <span data-tooltip aria-haspopup="true" class="has-tip tip-top" title="<%= tool.capitalize %>">
            <%= image_tag "#{tool}.png"%>
          </span>
        </div>
      <% end %>
    </div>
     <div class="row">
      <div class="two columns">
        <span data-tooltip aria-haspopup="true" class="has-tip tip-top" title="Elasticsearch">
          <%= image_tag "elasticsearch.svg"%>
        </span>
      </div>
      <% %w(cassandra mongo aws kafka zookeeper).each do |tool| %>
        <div class="two columns">
          <span data-tooltip aria-haspopup="true" class="has-tip tip-top" title="<%= tool.capitalize %>">
            <%= image_tag "#{tool}.png"%>
          </span>
        </div>
      <% end %>
    </div>
    <div class="row">
      <% %w(rails mesos consul docker kubernetes spark).each do |tool| %>
        <div class="two columns">
          <span data-tooltip aria-haspopup="true" class="has-tip tip-top" title="<%= tool.capitalize %>">
            <%= image_tag "#{tool}.png"%>
          </span>
        </div>
      <% end %>
    </div>
    <div class="row">
      <% %w(jenkins git nginx flask openstack vagrant).each do |tool| %>
        <div class="two columns">
          <span data-tooltip aria-haspopup="true" class="has-tip tip-top" title="<%= tool.capitalize %>">
            <%= image_tag "#{tool}.png"%>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>


<div class="map">
  <div class="row">
    <div id="map-canvas">
    </div>
  </div>
</div>
