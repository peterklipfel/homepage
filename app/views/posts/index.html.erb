<div class="visible-phone blog-phone">
<h1>Posts</h1>
<br>
<br>
<br>
<h3 style="text-align: center;">
<% @posts.each do |post| %>
    <%= link_to post.split("_").each{|word| word.capitalize!}.join(" "), post_link(post) %>
    <br>
<% end %>
</h3>
</div>
