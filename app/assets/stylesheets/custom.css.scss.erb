// VARIABLES

$light_green: #2ecc71;
$brown: #270F03;
$brick: #c0392b;
$light_grey: #f1f6f7;

// END VARIABLES

// Mixins
@mixin nav-link-style {
  & a {
    color: #fff;
    font-size: 22px;
    -webkit-backface-visibility: hidden;
    background-color: $light_green;
    -o-transition:.5s;
    -ms-transition:.5s;
    -moz-transition:.5s;
    -webkit-transition:.5s;
    /* ...and now for the proper property */
    transition:.5s;
  }
  & a:hover {
    -webkit-backface-visibility: hidden;
    background-color: #27ae60;
  }
  & .icon:hover {
    -webkit-backface-visibility: hidden;
    background-color: $light_green;
    color: #27ae60;
  }
  & a:active {background-color:transparent;}  /* selected link */
}

// END MIXINS

@font-face {
  font-family: gardensC;
  src: url("<%= asset_path('gardensC.otf')%>") format("opentype"); /* For IE */
  src: local("myfont"), url("<%= asset_path('gardensC.otf')%>") format("opentype"); /* For non-IE */
}

html {
  height: 100%;
}

body{
  background-color: $light_grey;
  height: 100%;
}

.container {
  min-height: 100%;
}

h1 {
	font-family: 'gardensC', Arial, sans-serif; 
	text-align: center;
  &.hero{
    margin-top: 0;
    font-size: 100px;
    @media (max-width: 500px) {
      font-size:50px;
    }
    color: $light_grey;
  }
}

h2 {
  text-align: center;
  &.hero{
    color: $light_grey;
    @media (max-width: 500px) {
      font-size:20px;
    }
  }
}

.main-wrap{
  padding: 0;
  overflow: hidden;
  height: 100%;
  margin-bottom: -80px;
  margin-top: 77px;
  @media(max-width: 767px){
    margin-top: 56px;
  }
}

#header{
  max-width: 100%;
  min-width: 100%;
  overflow: visible;
  #style-nav{
    background-color: $light_green;
  }
  .style-row-nav-left{
    width: 13%;
    text-align: center;
    border: none;
  }
  .style-row-nav-right{
    width: 6%;
    text-align: center;
    border: none;
    float:right;
    font-size:25px;
    
    .foundicon-twitter{
      font-size:25px;
    }
    .foundicon-github{
      font-size:25px;
    }
    .foundicon-linkedin{
      font-size:25px;
    }
  }
  #mainNav{
    background-color: transparent;
  }
  @include nav-link-style;
  & p {
    margin: 0;
  }
  .sidebar-button{
    border: none;
  }

}

#sidebar{
  margin-top: 77px;
  position: fixed;
}

.nav-bar-side{
  & li{
    border: none;
    @include nav-link-style;
    & a{
      font-size: 25px !important;
    }
  }
}

.who-am-i{
  background-color: $light_green;
  height: 100%;
  width: 100%;
  .hero-img {
    @media (max-width: 1000px) {
      display:none;
    }
    margin: 0 auto;
    display: block;
    margin-top: 33px;
  }
}

.computer-me{
  padding-bottom: 10vh;
  background: url(image_path('pk.png')) no-repeat fixed;
  background-image: url(image_path('pk.png'));
  background-position-x: 94%;
  background-position-y: 15%;
  background-size: initial;
  background-repeat-x: no-repeat;
  background-repeat-y: no-repeat;
  background-attachment: fixed;
  background-origin: initial;
  background-clip: initial;

  padding-bottom: 40vh;
  background-color: $light_grey;
  width:100%;
  height: 100%;
  & img{
    width: 200px;
    height: 200px;
    margin: 0 auto;
    display: block;
  }
  & p {
    font-size: 50px;
    text-align: center;
  }

  & h1{
    font-size: 85px;
    margin: 60px auto;
  }
}

.map {
  width: 100%;
  & .row {
    width: 100%;
    height: 80vh;
    overflow: visible;
    & #map-canvas{
      width: 100%;
      height: 90vh;
    }
  }
}

.languages-me{
  padding-bottom: 10vh;
  background-color: #3498db;
  & .bg {
    position: absolute;
  }
  & .row{
    margin-bottom: 30px;
  }
   & h1{
    font-size: 85px;
    margin: 60px auto;
  }
}

.tools-me{
  padding-bottom: 10vh;
  background: url(image_path('pk.png')) no-repeat fixed;
  background-image: url(image_path('pk.png'));
  background-position-x: 96%;
  background-position-y: 15%;
  background-size: initial;
  background-repeat-x: no-repeat;
  background-repeat-y: no-repeat;
  background-attachment: fixed;
  background-origin: initial;
  background-clip: initial;

  & .row {
    margin-bottom: 20px;
  }
  & img{
    width: 15vh;
    height: 15vh;
    max-height: 137px;
  }
}

footer {
  clear: both;
  position: relative;
  z-index: 10;
  height: 80px;
  margin-top: -80px;
  background-color: $brown;
  & ul {
    margin: 20px auto;
    position: relative;
    display: inline-block;
    vertical-align: middle;
    & li {
      margin: 0 30px;
      display: inline;
      & a {
        font-size: 25px;
        color: #eee;
        -webkit-backface-visibility: hidden;
        -o-transition:.5s;
        -ms-transition:.5s;
        -moz-transition:.5s;
        -webkit-transition:.5s;
        /* ...and now for the proper property */
        transition:.5s;

        @media (max-width: 500px) {
          font-size:18px
        }
      }
      & a:hover {
        -webkit-backface-visibility: hidden;
        color: #c0392b;
      }
      & a:active {background-color:transparent;}  /* selected link */
    }
  }
}

.github-repo{
  background-color: $light_grey;
  color: $light_grey;
  -webkit-backface-visibility: hidden;
  -o-transition:.5s;
  -ms-transition:.5s;
  -moz-transition:.5s;
  -webkit-transition:.5s;
  /* ...and now for the proper property */
  transition:.5s;

  @media (max-width: 500px) {
    font-size:18px
  }
  .github-repo-url{
    float: right;
  }
  .github-repo-language {
    float: right;
  }
  &:hover {
    background-color: #bdc3c7;
    -webkit-backface-visibility: hidden;
    color: #000;
  }
}
